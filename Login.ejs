<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Login || Bancstud</title>
    <link rel="shortcut icon" type="image/ico" href="Img/Favi.ico"/>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <link rel="stylesheet" href="Css/stylo.css">
    
  </head>

  <body background="Img/ETD.jpg"></body>

    <div class="login-box">
      <img src="Img/logo.jpg" class="avatar" alt="Avatar Image">
      <h1>INICIA SESION</h1>
      <form action="/login" method="post">
        <label for="username">Correo</label>
        <input type="text" name="Usuario" placeholder="Ingrese Su Correo" required>
        <label for="password">Contraseña</label>
        <input type="password" name="Password" placeholder="Ingrese Su Contraseña" required>
        <input type="submit" value="Ingresar">
      </form>
 

   <% if (typeof alert != "undefined")  { %>
    <script>
    Swal.fire({
      title:'<%= alertTitle %>',
      text:'<%= alertMessage %>',
      icon:'<%= alertIcon %>',
      showConfirmButton:' <%= showConfirmButton %>',
      timer: <%= timer %>
 }).then(()=>{
      window.location='/<%= ruta %>'
    })
    </script>
  <% } %>
    </div>
  </body>
</html>